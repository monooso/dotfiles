{
  // AI agent settings.
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  "buffer_font_size": 15,
  "buffer_line_height": {
    "custom": 2.5
  },
  "close_on_file_delete": true,
  "collaboration_panel": {
    "button": false
  },
  "current_line_highlight": "none",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "drag_and_drop_selection": { "enabled": false },
  "experimental.theme_overrides": {
    // Stop adding a background colour to elements you shouty bastard.
    // @see https://github.com/zed-industries/zed/discussions/22854#discussioncomment-12073289
    "editor.document_highlight.bracket_background": "#FFFFFF00",
    "editor.document_highlight.read_background": "#FFFFFF00",
    "editor.document_highlight.write_background": "#FFFFFF00"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": { "delay_ms": 1000 }
  },
  "inline_code_actions": true,
  "minimap": {
    "show": "never"
  },
  "outline_panel": {
    "button": true
  },
  "project_panel": {
    "default_width": 300,
    "dock": "right"
  },
  "relative_line_numbers": "enabled",
  "restore_on_startup": "none",
  "scrollbar": {
    "show": "never"
  },
  "search": {
    "case_sensitive": true,
    "regex": true
  },
  "selection_highlight": false,
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "show_close_button": "hover"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false,
    "font_size": 14,
    "line_height": "comfortable"
  },
  "theme": {
    "mode": "system",
    "dark": "Rosé Pine Moon",
    "light": "Rosé Pine Dawn"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_size": 14,
  "use_smartcase_search": true,
  "vim_mode": true,
  "window_decorations": "server"
}
