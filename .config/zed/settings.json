{
  // AI agent settings.
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "model_parameters": [],
    "play_sound_when_agent_done": true,
    "version": "2"
  },
  "language_models": {
    "copilot_chat": {
      "api_url": "https://api.githubcopilot.com/chat/completions",
      "auth_url": "https://api.github.com/copilot_internal/v2/token",
      "models_url": "https://api.githubcopilot.com/models"
    }
  },
  // Language-specific settings.
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph"]
    }
  },
  // Language-server settings.
  "lsp": {
    // @see https://zed.dev/docs/languages/ruby#setting-up-rubocop-lsp
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    // @see https://zed.dev/docs/languages/ruby#setting-up-ruby-lsp
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    }
  },
  // General settings. Mostly just removing clutter.
  "buffer_font_family": "JetBrains Mono",
  "buffer_line_height": {
    "custom": 2.0
  },
  "close_on_file_delete": true,
  "collaboration_panel": {
    "button": false
  },
  "current_line_highlight": "none",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "drag_and_drop_selection": false,
  "experimental.theme_overrides": {
    // Stop adding a background colour to elements you shouty bastard.
    // @see https://github.com/zed-industries/zed/discussions/22854#discussioncomment-12073289
    "editor.document_highlight.bracket_background": "#FFFFFF00",
    "editor.document_highlight.read_background": "#FFFFFF00",
    "editor.document_highlight.write_background": "#FFFFFF00"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "inline_code_actions": false,
  "minimap": {
    "show": "never"
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 300,
    "dock": "right"
  },
  "relative_line_numbers": true,
  "restore_on_startup": "none",
  "scrollbar": {
    "show": "never"
  },
  "search": {
    "case_sensitive": true,
    "regex": true
  },
  "selection_highlight": false,
  "tab_bar": {
    "show": false
    // "show_nav_history_buttons": false,
    // "show_tab_bar_buttons": false
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "show_close_button": "hidden"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    // Hide the button in the toolbar. Ctrl-` works just fine.
    "button": false,
    "font_size": 13
  },
  "theme": {
    "mode": "system",
    "dark": "Ayu Mirage",
    "light": "One Light"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "use_smartcase_search": true,
  "vim_mode": true
}
