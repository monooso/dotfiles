{
  // AI agent settings.
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  // Language-specific settings.
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph"]
    }
  },
  // Language-server settings.
  "lsp": {
    // @see https://zed.dev/docs/languages/ruby#setting-up-rubocop-lsp
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    // @see https://zed.dev/docs/languages/ruby#setting-up-ruby-lsp
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    }
  },
  "auto_install_extensions": { "tokyo-night": true },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_line_height": {
    "custom": 2.5
  },
  "close_on_file_delete": true,
  "collaboration_panel": {
    "button": false
  },
  "current_line_highlight": "none",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "drag_and_drop_selection": { "enabled": false },
  "experimental.theme_overrides": {
    // Stop adding a background colour to elements you shouty bastard.
    // @see https://github.com/zed-industries/zed/discussions/22854#discussioncomment-12073289
    "editor.document_highlight.bracket_background": "#FFFFFF00",
    "editor.document_highlight.read_background": "#FFFFFF00",
    "editor.document_highlight.write_background": "#FFFFFF00"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": { "delay_ms": 1000 }
  },
  "inline_code_actions": true,
  "minimap": {
    "show": "never"
  },
  "outline_panel": {
    "button": true
  },
  "project_panel": {
    "default_width": 300,
    "dock": "right"
  },
  "relative_line_numbers": true,
  "restore_on_startup": "none",
  "scrollbar": {
    "show": "never"
  },
  "search": {
    "case_sensitive": true,
    "regex": true
  },
  "selection_highlight": false,
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "show_close_button": "hover"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false,
    "dock": "right",
    "default_width": 1000,
    "font_size": 13,
    "line_height": "comfortable"
  },
  "theme": {
    "mode": "system",
    "dark": "Tokyo Night",
    "light": "One Light"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "use_smartcase_search": true,
  "vim_mode": true
}
