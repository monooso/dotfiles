[
  // ----------------
  // Panel Navigation
  // ----------------
  // Use <C-w> to manage between panels, much as we would splits.
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-w a": "agent::ToggleFocus",
      "ctrl-w g": "git_panel::ToggleFocus",
      "ctrl-w p": "project_panel::ToggleFocus",
      "ctrl-w t": "terminal_panel::ToggleFocus",
      "ctrl-w x": "workspace::CloseActiveDock"
    }
  },

  // -------------------
  // Test (Task) Runners
  // -------------------
  // Neovim is in my fingers.
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      // [E]xecute.
      "space e f": ["workspace::SendKeystrokes", "ctrl-home space e t"],
      "space e t": "editor::SpawnNearestTask",
      "space e p": "task::Rerun"
    }
  },

  // ---------
  // Terminal.
  // ---------
  {
    "context": "Terminal",
    "bindings": { "ctrl-t": "workspace::NewTerminal" }
  }
]
