# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
alias c='clear'
alias l='ls -al'
alias ..='cd ..'
alias ...='cd ../..'

# -----------------------------------------------------------------------------
# Git
# -----------------------------------------------------------------------------
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gl='git log'
alias gco='git checkout'
alias gs='git status -sb | sort -bf'
alias lg='lazygit'

# -----------------------------------------------------------------------------
# Neovim
# -----------------------------------------------------------------------------
alias vim=nvim
alias vi=nvim
alias v=nvim

# -----------------------------------------------------------------------------
# Load additional aliases from the aliases.d subdirectory
# -----------------------------------------------------------------------------
for extra in ./aliases.d/; do
  source $extra
done
